@model fa19projectgroup16.Models.AppUser

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>

<a class="btn btn-primary" asp-action="EmployeeRegister">Register Employee</a><br />
<p></p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser item in @ViewBag.AllEmployees)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                <a asp-action="Modify" asp-route-email="@item.Email">Modify</a> |
                @if (item.Is_Employed)
                {
                    <a asp-action="Terminate" asp-route-email="@item.Email">Terminate</a>
                }
                else
                {
                    <a asp-action="Rehire" asp-route-email="@item.Email">Hire Again</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>
